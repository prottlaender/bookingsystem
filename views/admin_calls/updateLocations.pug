doctype html
head
  title= `${title}`
  // Import Google Icon Font
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  // Import materialize.css
  link(type='text/css', rel='stylesheet', href='../css/materialize.min.css', media='screen,projection')
  // Import index.css
  link(type='text/css', rel='stylesheet', href='../css/index.css')
  // Let browser know website is optimized for mobile
  meta(name='viewport', content='width=device-width, initial-scale=1.0, viewport-fit=cover')
  // Let browser know website use utf-8 coding
  meta(http-equiv='content-type', content='text/html; charset=utf-8')
header.header
  nav.nav
    .nav-wrapper
      a.brand-logo#navtext Welcome #{name} #{lastname}
      a.sidenav-trigger(href='#', data-target='mobile-sidenav')
        i.material-icons menu
      ul.right.hide-on-med-and-down
        li
          a(href='/dashboard') Dashboard
  ul#mobile-sidenav.sidenav
    li
      a.sidenav-close(href='#')
        i.material-icons close
    li
      a(href='/dashboard') Dashboard
main.main
  .row
    .col.s10.push-s1.m8.push-m2.l6.push-l3
      .card
        #gradient.card-content
          h6#h6 Update Locations
        .card-content
          .row
            form#updateLocationForm.col.s12(method='post', action='/updatelocation')
              .input-field.col.s8
                input.readonly(type='text', name='id', value= data_location_id, readonly)
                label(for='id') Location ID
              .input-field.col.s8
                input.validate(type='text', name='updateLocation', value= data_location_location)
                label(for='updateLocation') New Location Name
              .input-field.col.s8
                input.validate(type='text', name='updateStreet', value= data_location_street)
                label(for='updateStreet') New Street
              .input-field.col.s8
                input.validate(type='text', name='updatePlz', value= data_location_plz)
                label(for='updatePlz') New Postal Code
              .input-field.col.s8
                input.validate(type='text', name='updateCity', value= data_location_city)
                label(for='updateCity') New City
              .input-field.col.s8
                input.validate(type='text', name='updatePriceYouth', value= data_location_priceyouth)
                label(for='updatePriceYouth') New Price Youth
              .input-field.col.s8
                input.validate(type='text', name='updatePriceAdult', value= data_location_priceadult)
                label(for='updatePriceAdult') New Price Adult
        .card-action.right-align
          a.btn.waves-effect.waves-light.grey.darken-1(href='/dashboard')
            | Back
            i.material-icons.right undo
          button.btn.waves-effect.waves-light(type='submit', form='updateLocationForm')
            | Confirm
            i.material-icons.right check_circle
// class="page-footer"
footer.footer
  nav.nav
    div#footerdiv
      p#footertext VFR Angerlohe Training Booking Tool

// JavaScript at end of body for optimized loading
script(type='text/javascript', src='../js/materialize.min.js')
script(type='text/javascript', src='../js/auth_admin_calls.js')
