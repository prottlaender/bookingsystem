doctype html
head
  title= `${title}`
  // Import Google Icon Font
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  // Import materialize.css
  link(type='text/css', rel='stylesheet', href='../css/materialize.min.css', media='screen,projection')
  // Import index.css
  link(type='text/css', rel='stylesheet', href='../css/index.css')
  // Let browser know website is optimized for mobile
  meta(name='viewport', content='width=device-width, initial-scale=1.0, viewport-fit=cover')
  // Let browser know website use utf-8 coding
  meta(http-equiv='content-type', content='text/html; charset=utf-8')
header.header
  nav.nav
    .nav-wrapper
      a.brand-logo#navtext Welcome #{name} #{lastname}
      a.sidenav-trigger(href='#', data-target='mobile-sidenav')
        i.material-icons menu
      ul.right.hide-on-med-and-down
        li
          a(href='/dashboard') Dashboard
  ul#mobile-sidenav.sidenav
    li
      a.sidenav-close(href='#')
        i.material-icons close
    li
      a(href='/dashboard') Dashboard
main.main
  .row
    .col.s10.push-s1.m8.push-m2.l6.push-l3
      .card
        #gradient.card-content
          h6#h6 Create Trainings
        .card-content
          .row
            form#updateTriningsForm.col.s12(method='post', action='/updatetraining')
              .row
                .input-field.col.s8
                  input.readonly(type='text', name='id', value= data_training_id, readonly)
                  label(for='id') Training ID
              .row
                .input-field.col.s8
                  input.readonly(type='text', name='location', value= data_training_location, readonly)
                  label(for='location') Location Name
              .row
                .input-field.col.s8
                  input.readonly(type='text', name='priceYouth', value= data_training_priceyouth, readonly)
                  label(for='priceYouth') Price Youth
              .row
                .input-field.col.s8
                  input.readonly(type='text', name='priceAdult', value= data_training_priceadult, readonly)
                  label(for='priceAdult') Price Adult
              .row
                .input-field.col.s8
                  input.readonly(type='text', name='type', value= data_training_type, readonly)
                  label(for='type') Type
              .row
                .input-field.col.s8
                  input.validate(type='text', name='newDate', value= data_training_date)
                  label(for='newDate') New Date (yyyy.mm.dd)
              .row
                .input-field.col.s8
                  input.validate(type='text', name='newTimeStart', value= data_training_timestart)
                  label(for='newTimeStart') New Time Start (hh:mm)
              .row
                .input-field.col.s8
                  input.validate(type='text', name='newTimeEnd', value= data_training_timeend)
                  label(for='newTimeEnd') New Time End (hh:mm)
              .row
                .input-field.col.s8
                  input.validate(type='text', name='newStatus', value= data_training_status)
                  label(for='newStatus') New Status (active, rejected)
        .card-action.right-align
          a.btn.waves-effect.waves-light.grey.darken-1(href='/dashboard')
            | Back
            i.material-icons.right undo
          button.btn.waves-effect.waves-light(type='submit', form='updateTriningsForm')
            | Confirm
            i.material-icons.right check_circle
// class="page-footer"
footer.footer
  nav.nav
    div#footerdiv
      p#footertext VFR Angelohe Training Booking Tool

// JavaScript at end of body for optimized loading
script(type='text/javascript', src='../js/materialize.min.js')
script(type='text/javascript', src='../js/auth_admin_calls.js')
